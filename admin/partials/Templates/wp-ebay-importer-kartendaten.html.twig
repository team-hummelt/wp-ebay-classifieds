{% extends "@layout/layout.html.twig" %}

 {% block content %}
     <div class="card-body" style="min-height: 65vh">
         <div class="col-lg-8 col-12 mx-auto">
             <h4 class="pt-3">Open-Street-Map <span class="fw-normal">Kartendaten suchen</span></h4>
             <hr>
             <form class="wec-admin-form">
                 <input type="hidden" name="method" value="search_osm_map">
                 <div class="row g-3">
                     <div class="col-xl-6 col-12">
                         <div class="form-floating">
                             <input type="text" name="street" class="form-control no-blur" id="inputStreet"
                                    placeholder="name@example.com" required>
                             <label for="inputStreet">Strasse/Hausnummer</label>
                         </div>
                     </div>
                     <div class="col-xl-6 col-12">
                         <div class="form-floating">
                             <input type="text" name="ort" class="form-control no-blur" id="inputPlzOrt"
                                    placeholder="name@example.com" required>
                             <label for="inputPlzOrt">Postleitzahl/Ort</label>
                         </div>
                     </div>
                     <div class="col-12">
                         <button data-osm="1" data-wait="1" type="submit" class="btn btn-success">Suchen</button>
                         <button type="button" class="btn-reset-osm btn btn-outline-secondary">Reset</button>
                     </div>
                     <div class="col-12 mt-5">
                         <h6 class="fw-normal text-muted">Json-Object</h6>
                         <div id="osmData" class="border rounded p-3" style="min-height: 170px"></div>
                         <div class="mt-3">
                             <i title="Kopieren" data-id="" class="btn-copy disabled font-blue cursor-pointer fs-5 fa fa-copy"></i>
                             <sup id="info" class="d-inline-block font-blue showInfo">&nbsp; Kopiert ...</sup>
                         </div>
                     </div>
                 </div>
             </form>
         </div>
     </div>
 {% endblock %}